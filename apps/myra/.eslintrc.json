{
  "extends": [
    "next",
    "next/core-web-vitals",
    "plugin:@nrwl/nx/react-typescript",
    "../../.eslintrc.json"
  ],
  "ignorePatterns": [
    "!**/*",
    "/dist",
    "jest.config.ts",
    "next.config.js"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {
        "@next/next/no-html-link-for-pages": [
          "error",
          "apps/myra/pages"
        ],
        "unicorn/filename-case": [
          "error",
          {
            "cases": {
              "kebabCase": true
            }
          }
        ]
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ]
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "rules": {}
    }
  ],
  "env": {
    "jest": true
  }
}
